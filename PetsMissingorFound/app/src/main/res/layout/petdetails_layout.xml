<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/labelshadow"
    >
    <TextView
        android:id="@+id/tvPetDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PetDetails"
        android:textSize="@dimen/Title"
        android:textColor="@color/label"
        />
   <ImageView
       android:id="@+id/ivPetDetails"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/tvPetDetails"/>
    <ImageButton
        android:id="@+id/ibPetDetails"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_location"
        android:layout_toRightOf="@id/tvPetDetails"
        android:layout_toEndOf="@id/tvPetDetails"
        android:layout_below="@id/tvPetDetails"/>
    <TextView
        android:id="@+id/tvPname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pname"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/ibPetDetails"
        />
    <TextView
        android:id="@+id/tvnameP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/ibPetDetails"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tvPbreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pbreed"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvnameP"
        />
    <TextView
        android:id="@+id/tvbreedP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvnameP"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tvPdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pdetails"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvPbreed"
        />
    <TextView
        android:id="@+id/tvdetailsP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvPdetails"
        />
    <TextView
        android:id="@+id/tvPcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pcontact"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvdetailsP"
        />
    <TextView
        android:id="@+id/tvcontactP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvdetailsP"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tvPstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Pstatus"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvPcontact"
        />
    <TextView
        android:id="@+id/tvstatusP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvcontactP"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tvPlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Plocation"
        android:textSize="@dimen/Label"
        android:textColor="@color/label"
        android:layout_below="@id/tvstatusP"
        />
    <fragment
        android:id="@+id/fGoogleMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPlocation"/>
</RelativeLayout>
    </ScrollView>